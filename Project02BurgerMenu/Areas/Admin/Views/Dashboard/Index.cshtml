@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-sm-12 mb-4">
            <h2 class="fw-bold text-dark">Hoş Geldiniz!</h2>
            <p class="text-muted">@ViewBag.datetime</p>
        </div>
    </div>

    <div class="row mt-3 g-4">
        <!-- Ürün Sayısı ve Rezervasyon Sayısı -->
        <div class="col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Ürün Sayısı</h5>
                    <p class="h3 fw-bold text-dark mb-0">@ViewBag.products</p>
                    <!-- Ürün Sayısı Grafik -->
                    <canvas id="product-chart" class="mt-4"></canvas>
                </div>
            </div>
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body">
                    <h5 class="card-title text-primary">Rezervasyon Sayısı</h5>
                    <p class="h3 fw-bold text-dark mb-0">@ViewBag.reservations</p>
                    <!-- Rezervasyon Sayısı Grafik -->
                    <canvas id="reservation-chart" class="mt-4"></canvas>
                </div>
            </div>
        </div>

        <!-- Website Metrikleri -->
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Website Metrikleri</h5>
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="legend-box me-2" style="background-color: #007bff;"></div>
                                <div>
                                    <h6 class="fw-bold mb-0">@ViewBag.admins</h6>
                                    <small class="text-muted">Admin</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="legend-box me-2" style="background-color: #b200ff;"></div>
                                <div>
                                    <h6 class="fw-bold mb-0">@ViewBag.testimonials</h6>
                                    <small class="text-muted">Referanslar</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Website Metrikleri - Grafik -->
                    <canvas id="web-audience-metrics-chart" class="mt-4"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- En Çok Sipariş Edilen Ürünler -->
    <div class="row mt-5">
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">En Çok Sipariş Edilen Ürünler</h5>
                    <div class="table-responsive mt-4">
                        <table class="table table-hover align-middle">
                            <thead class="table-primary">
                                <tr>
                                    <th>Ürün</th>
                                    <th>Ücret</th>
                                    <th>Kategori</th>
                                    <th>Hedefimiz</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < ViewBag.productNames.Count; i++)
                                {
                                    var progress = ViewBag.productProgress[i];
                                    var progressColor = progress >= 75 ? "bg-success" :
                                        progress >= 50 ? "bg-warning" : "bg-danger";

                                    <tr>
                                        <td>@ViewBag.productNames[i]</td>
                                        <td>@ViewBag.productPrices[i]</td>
                                        <td>@ViewBag.productCategory[i]</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress flex-grow-1 me-3" style="height: 8px;">
                                                    <div class="progress-bar @progressColor" style="width: @progress%;"></div>
                                                </div>
                                                <span class="fw-bold">@progress%</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Restaurant Puanı -->
        <div class="col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Restaurant Puanı</h5>
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <h1 class="text-warning fw-bold">4.3</h1>
                        <i class="fa fa-star text-warning ms-2"></i>
                    </div>
                    <p class="text-muted">186 Kişi Puanladı</p>
                    <div class="mt-3">
                        @for (int i = 5; i >= 1; i--)
                        {
                            var percentage = i == 5 ? 80 :
                                             i == 4 ? 45 :
                                             i == 3 ? 30 :
                                             i == 2 ? 8 : 1;

                            <div class="d-flex align-items-center mb-2">
                                <span class="me-2 fw-bold">@i</span>
                                <i class="fa fa-star text-warning me-2"></i>
                                <div class="progress flex-grow-1" style="height: 8px;">
                                    <div class="progress-bar bg-warning" style="width: @percentage%;"></div>
                                </div>
                                <span class="ms-2">@percentage%</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Grafik Kütüphanesi (Chart.js) -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Ürün Sayısı Grafiği
    var ctxProduct = document.getElementById('product-chart').getContext('2d');
    var productChart = new Chart(ctxProduct, {
        type: 'doughnut',  // Dairesel grafik
        data: {
            labels: ['Ürün Sayısı'],
            datasets: [{
                data: [@ViewBag.products],  // ViewBag üzerinden gelen ürün sayısı
                backgroundColor: ['#007bff'],  // Ürün için mavi renk
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return 'Ürün Sayısı: ' + tooltipItem.raw;
                        }
                    }
                }
            }
        }
    });

    // Rezervasyon Sayısı Grafiği
    var ctxReservation = document.getElementById('reservation-chart').getContext('2d');
    var reservationChart = new Chart(ctxReservation, {
        type: 'doughnut',  // Dairesel grafik
        data: {
            labels: ['Rezervasyon Sayısı'],
            datasets: [{
                data: [@ViewBag.reservations],  // ViewBag üzerinden gelen rezervasyon sayısı
                backgroundColor: ['#ff5733'],  // Rezervasyon için turuncu renk
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return 'Rezervasyon Sayısı: ' + tooltipItem.raw;
                        }
                    }
                }
            }
        }
    });

    // Website Metrikleri Grafiği
    var ctxWebMetrics = document.getElementById('web-audience-metrics-chart').getContext('2d');
    var webMetricsChart = new Chart(ctxWebMetrics, {
        type: 'bar',
        data: {
            labels: ['Admin', 'Referanslar'],
            datasets: [{
                label: 'Metrikler',
                data: [@ViewBag.admins, @ViewBag.testimonials],  // ViewBag üzerinden gelen admin ve referans verileri
                backgroundColor: ['#007bff', '#b200ff'],
                borderColor: ['#007bff', '#b200ff'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
