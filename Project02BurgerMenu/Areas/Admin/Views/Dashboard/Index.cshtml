
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-sm-12 mb-4">
            <h2 class="fw-bold text-dark">Hoş Geldiniz!</h2>
            <p class="text-muted">@ViewBag.datetime</p>
        </div>
    </div>

    <div class="row mt-3 g-4">
        <!-- Ürün Sayısı ve Rezervasyon Sayısı -->
        <div class="col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Ürün Sayısı</h5>
                    <p class="h3 fw-bold text-dark mb-0">@ViewBag.products</p>
                </div>
            </div>
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body">
                    <h5 class="card-title text-primary">Rezervasyon Sayısı</h5>
                    <p class="h3 fw-bold text-dark mb-0">@ViewBag.reservations</p>
                </div>
            </div>
        </div>

        <!-- Website Metrikleri -->
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Website Metrikleri</h5>
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="legend-box me-2" style="background-color: #007bff;"></div>
                                <div>
                                    <h6 class="fw-bold mb-0">@ViewBag.admins</h6>
                                    <small class="text-muted">Admin</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="legend-box me-2" style="background-color: #b200ff;"></div>
                                <div>
                                    <h6 class="fw-bold mb-0">@ViewBag.testimonials</h6>
                                    <small class="text-muted">Referanslar</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <canvas id="web-audience-metrics-satacked" class="mt-4"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- En Çok Sipariş Edilen Ürünler -->
    <div class="row mt-5">
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">En Çok Sipariş Edilen Ürünler</h5>
                    <div class="table-responsive mt-4">
                        <table class="table table-hover align-middle">
                            <thead class="table-primary">
                                <tr>
                                    <th>Ürün</th>
                                    <th>Ücret</th>
                                    <th>Kategori</th>
                                    <th>Hedefimiz</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < ViewBag.productNames.Count; i++)
                                {
                                    var progress = ViewBag.productProgress[i];
                                    var progressColor = progress >= 75 ? "bg-success" :
                                        progress >= 50 ? "bg-warning" : "bg-danger";

                                    <tr>
                                        <td>@ViewBag.productNames[i]</td>
                                        <td>@ViewBag.productPrices[i]</td>
                                        <td>@ViewBag.productCategory[i]</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress flex-grow-1 me-3" style="height: 8px;">
                                                    <div class="progress-bar @progressColor" style="width: @progress%;"></div>
                                                </div>
                                                <span class="fw-bold">@progress%</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Restaurant Puanı -->
        <div class="col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Restaurant Puanı</h5>
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <h1 class="text-warning fw-bold">4.3</h1>
                        <i class="fa fa-star text-warning ms-2"></i>
                    </div>
                    <p class="text-muted">186 Kişi Puanladı</p>
                    <div class="mt-3">
                        @for (int i = 5; i >= 1; i--)
                        {
                            var percentage = i == 5 ? 80 :
                                             i == 4 ? 45 :
                                             i == 3 ? 30 :
                                             i == 2 ? 8 : 1;

                            <div class="d-flex align-items-center mb-2">
                                <span class="me-2 fw-bold">@i</span>
                                <i class="fa fa-star text-warning me-2"></i>
                                <div class="progress flex-grow-1" style="height: 8px;">
                                    <div class="progress-bar bg-warning" style="width: @percentage%;"></div>
                                </div>
                                <span class="ms-2">@percentage%</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
