@model List<Project02BurgerMenu.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About Us</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            
                            <th>Subtitle</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>@item.AboutTitle</td>
                                <td>@item.Title</td>
                                <td>@item.AboutDescription</td>
                                <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Delete</a></td>
                                <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/About/AddAbout/" class="btn btn-primary">Add New About Us</a>
            </div>
        </div>
    </div>
</div>
