@model List<Project02BurgerMenu.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kategori ID</th>
                            <th>Kategori Adi</th>
                            <th>Kategori Ürünleri</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td><a href="/Admin/Product/CategoryProduct/@item.CategoryId" class="btn btn-warning">Ürünleri Listele</a></td>
                                <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Girisi</a>
            </div>
        </div>
    </div>
</div>

