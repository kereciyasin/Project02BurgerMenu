@model List<Project02BurgerMenu.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category List</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            @*<th>Category ID</th>*@
                            <th>Category Name</th>
                            <th>Category Products</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*<td>@item.CategoryId</td>*@
                                <td>@item.CategoryName</td>
                                <td><a href="/Admin/Product/CategoryProduct/@item.CategoryId" class="btn btn-warning">List Products</a></td>
                                <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Delete</a></td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Category/AddCategory/" class="btn btn-primary">Add New Category</a>
            </div>
        </div>
    </div>
</div>
