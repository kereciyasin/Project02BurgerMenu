@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    /* Main Card Style */
    .card {
        height: 170px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: linear-gradient(135deg, #f5f7fa, #e4e9f0);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        /* Card Hover Effect */
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    /* Card Title Style */
    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #4a5568; /* Darker tone */
    }

    /* Card Value Style */
    .card h4.text-dark {
        font-size: 1.5rem;
        font-weight: bold;
        color: #2d3748; /* Modern dark tone */
    }

    /* Card Gradient Effects */
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: linear-gradient(145deg, #ffffff, #e6e6e6);
        border-radius: 12px;
    }

    /* Margin */
    .mb-4 {
        margin-bottom: 30px;
    }

    /* Container Flexibility */
    .container {
        max-width: 1200px;
        margin: auto;
    }
</style>

<div class="container">
    <!-- Row 1 -->
    <div class="row">
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.products</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Reservation Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.reservations</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Admin Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.admins</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Testimonial Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.testimonials</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4"></div>

    <!-- Row 2 -->
    <div class="row">
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Daily Deals Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.deals</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Canceled Reservations</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.canceledReservations</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.categories</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Main Dish Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.mainDishes</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4"></div>

    <!-- Row 3 -->
    <div class="row">
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Subscriber Count</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.subscribes</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Average Dish Price</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.avgPrice</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Highest Dish Price</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.maxPrice</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Last Added Reservation Time</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.lastReserve</h4>
                </div>
            </div>
        </div>
    </div>
</div>
