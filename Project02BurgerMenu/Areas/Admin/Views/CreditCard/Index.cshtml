@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- custom css file link -->
    <link rel="stylesheet" href="~/Content/style.css">

    <style>
        /* Genel Tasarım */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(to right, #6a11cb, #2575fc);
        }

        .container {
            width: 100%;
            max-width: 800px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .card-container {
            position: relative;
            width: 100%;
            max-width: 400px;
            height: 240px;
            margin: 0 auto 20px;
            perspective: 1000px;
        }

            .card-container .front, .card-container .back {
                width: 100%;
                height: 100%;
                position: absolute;
                backface-visibility: hidden;
                border-radius: 15px;
                background: linear-gradient(145deg, #fff, #e6e6e6);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                transition: transform 0.6s ease-in-out;
            }

            .card-container .front {
                z-index: 2;
                padding: 20px;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

            .card-container .back {
                transform: rotateY(180deg);
                padding: 20px;
            }

            .card-container .image {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .card-container .image img {
                    width: 50px;
                }

            .card-container .card-number-box, .card-container .card-holder-name, .expiration {
                font-size: 18px;
                font-weight: bold;
            }

            .card-container .flexbox {
                display: flex;
                justify-content: space-between;
            }

            .card-container .box {
                flex: 1;
                margin-right: 10px;
            }

                .card-container .box:last-child {
                    margin-right: 0;
                }

            .card-container .back .stripe {
                height: 40px;
                background: #333;
                margin: 10px 0;
                border-radius: 5px;
            }

            .card-container .back .box {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .card-container .back .cvv-box {
                font-size: 16px;
                font-weight: bold;
                padding: 5px;
                background: #ddd;
                border-radius: 5px;
            }

        /* Form Tasarımı */
        form .inputBox {
            margin-bottom: 15px;
        }

            form .inputBox span {
                font-size: 14px;
                color: #555;
            }

            form .inputBox input, form .inputBox select {
                width: 100%;
                padding: 10px;
                font-size: 14px;
                border: 1px solid #ccc;
                border-radius: 5px;
                outline: none;
                margin-top: 5px;
            }

        form .flexbox {
            display: flex;
            gap: 10px;
        }

        form .submit-btn {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            color: #fff;
            background: #2575fc;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            form .submit-btn:hover {
                background: #1b5cd8;
            }
    </style>
</head>
<body>

    <div class="container">

        <div class="card-container">
            <!-- Ön yüz -->
            <div class="front">
                <div class="image">
                    <img src="~/img/chip.png" alt="">
                    <img src="~/img/visa.png" alt="">
                </div>
                <div class="card-number-box">################</div>
                <div class="flexbox">
                    <div class="box">
                        <span>Kart Sahibi</span>
                        <div class="card-holder-name">Ad Soyad</div>
                    </div>
                    <div class="box">
                        <span>Son Geçerlilik Tarihi</span>
                        <div class="expiration">
                            <span class="exp-month">MM</span> /
                            <span class="exp-year">YY</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Arka yüz -->
            <div class="back">
                <div class="stripe"></div>
                <div class="box">
                    <span>CVV</span>
                    <div class="cvv-box"></div>
                    <img src="~/img/visa.png" alt="">
                </div>
            </div>
        </div>

        <form action="">
            <div class="inputBox">
                <span>Kart Numarası</span>
                <input type="text" id="credit-card" maxlength="19" class="card-number-input">
            </div>
            <div class="inputBox">
                <span>Kart Sahibi</span>
                <input type="text" class="card-holder-input">
            </div>
            <div class="flexbox">
                <div class="inputBox">
                    <span>Ay</span>
                    <select class="month-input">
                        <option value="month" selected disabled>Ay</option>
                        <!-- Ay seçenekleri -->
                        <option value="01">01</option>
                        <!-- diğer aylar -->
                        <option value="12">12</option>
                    </select>
                </div>
                <div class="inputBox">
                    <span>Yıl</span>
                    <select class="year-input">
                        <option value="year" selected disabled>Yıl</option>
                        <!-- Yıl seçenekleri -->
                        <option value="2030">2030</option>
                    </select>
                </div>
                <div class="inputBox">
                    <span>CVV</span>
                    <input type="text" maxlength="3" class="cvv-input">
                </div>
            </div>
            <input type="submit" value="Kaydet" class="submit-btn">
        </form>

    </div>

    <!-- JavaScript -->
    <script>
        // JS kodları aynı
    </script>

</body>
</html>
