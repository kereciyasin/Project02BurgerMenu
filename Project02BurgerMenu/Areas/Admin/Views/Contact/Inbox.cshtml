@model List<Project02BurgerMenu.Entities.Contact>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans İletişim Kutusu</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Mesaj ID</th>
                            <th>Gönderen</th>
                            <th>Email Adresi</th>
                            <th>Gönderim Tarihi</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Mesaj Detayları</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ContactID</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.SendDate.ToString("dd / MM / yyyy")</td>
                                @if (item.IsRead == false)
                                {
                                    <td><a href="/Admin/Contact/MessageStatusChangeToTrue/@item.ContactID" class="btn btn-inverse-primary btn-fw">Okundu Olarak İşaretle</a></td>
                                }
                                else
                                {
                                    <td><a href="/Admin/Contact/MessageStatusChangeToFalse/@item.ContactID" class="btn btn-primary">Okunmadı Olarak İşaretle</a></td>
                                }

                                <td><a href="/Admin/Contact/DeleteMessage/@item.ContactID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/Contact/DetailMessage/@item.ContactID">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

