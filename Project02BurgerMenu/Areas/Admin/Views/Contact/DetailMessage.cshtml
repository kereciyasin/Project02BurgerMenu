@model Project02BurgerMenu.Entities.Contact
@{
    ViewBag.Title = "DetailMessage";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card border-primary">
        <div class="card-body">
            <h4 class="card-title text-primary">Message Details</h4>
            <p class="card-description text-muted">This section contains the details of the message sent by the user.</p>

            <div class="col-md-12 grid-margin-lg-0 grid-margin stretch-card">
                <div class="card bg-light">
                    <div class="card-body">
                        <!-- Form Group: Sender, Email, and Date -->
                        <div class="form-group row">
                            <!-- Sender -->
                            <div class="col">
                                <label class="text-secondary font-weight-bold">Sender</label>
                                <input class="typeahead form-control border-info"
                                       type="text"
                                       placeholder="@Html.DisplayFor(x => x.Name)"
                                       readonly>
                            </div>

                            <!-- Email -->
                            <div class="col">
                                <label class="text-secondary font-weight-bold">Email</label>
                                <input class="typeahead form-control border-info"
                                       type="text"
                                       placeholder="@Html.DisplayFor(x => x.Email)"
                                       readonly>
                            </div>

                            <!-- Date -->
                            <div class="col">
                                <label class="text-secondary font-weight-bold">Date</label>
                                <input class="typeahead form-control border-info"
                                       type="text"
                                       placeholder="@Model.SendDate.ToString("dd/MM/yyyy")"
                                       readonly>
                            </div>
                        </div>

                        <!-- Message Section -->
                        <div class="mt-4">
                            <p class="card-description text-secondary font-weight-bold">Message</p>
                            <textarea class="form-control border-info bg-white"
                                      rows="5"
                                      readonly>@Html.DisplayFor(x => x.Message)</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
