@model Project02BurgerMenu.Entities.Reservation
@{
    ViewBag.Title = "DetailReservation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .input-group {
        display: flex;
        align-items: stretch; /* To match the heights */
    }

        .input-group .form-control {
            margin-right: 5px; /* Adjust space between inputs */
        }

            .input-group .form-control:last-child {
                margin-right: 0; /* Remove space on the last input */
            }

    .btn-fw {
        display: inline-block; /* To make the button look like a box */
        border-radius: 5px; /* Round corners */
        padding: 10px 20px; /* Adjust padding */
        margin-bottom: 30px;
    }

    .text-center {
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
    }
</style>

<br />
<form method="post" action="@Url.Action("DetailReservation", "Reservation", new { area = "Admin"})">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reservation Details</h4>
                <p class="card-description"></p>
                <div class="col-md-12 grid-margin-lg-0 grid-margin stretch-card">

                    <div class="card">

                        <div class="card-body">
                            <div class="form-group row">

                                <div class="col">
                                    <label>Reservation ID</label>
                                    <div id="the-basics">
                                        @Html.HiddenFor(x => x.ReservationId)
                                        <input class="typeahead" type="text" placeholder="@Html.DisplayFor(x=>x.ReservationId)" readonly>
                                    </div>
                                </div>
                                <div class="col">
                                    <label>Reservation Owner</label>
                                    <div id="the-basics">
                                        <div class="input-group">
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                        </div>

                                    </div>
                                </div>
                                <div class="col">
                                    <label>Email</label>
                                    <div id="bloodhound">
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col">
                                    <label>Phone</label>
                                    <div id="bloodhound">
                                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col">
                                    <label>Number of People</label>
                                    <div id="bloodhound">
                                        @Html.TextBoxFor(x => x.PeopleCount, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                            <div class="col">
                                <div class="col">
                                    <label>Reservation Date</label>
                                    <div id="bloodhound">
                                        @Html.TextBoxFor(x => x.ReservationDate, Model.ReservationDate.ToString("dd/MM/yyyy"), new { @class = "form-control" })
                                    </div>
                                </div>
                                <br />
                                <div class="col">
                                    <label>Reservation Time</label>
                                    <div id="bloodhound">
                                        @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
                                    </div>
                                </div>
                                <br />

                                <br />
                                <div id="bloodhound" class="col">
                                    <label>Reservation Message</label>
                                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = 5 })
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-success btn-fw" style="width: 200px;">Update</button>
                        </div>
                    </div>

                </div>


            </div>

        </div>


    </div>

</form>
