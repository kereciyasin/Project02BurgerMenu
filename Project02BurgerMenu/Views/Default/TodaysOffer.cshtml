@model List<Project02BurgerMenu.Entities.Product>

<section class="site-section bg-light" id="section-offer">
    <div class="container">

        <div class="row">
            <div class="col-md-12 text-center mb-5 site-animate">
                <h4 class="site-sub-title">Our Offers</h4>
                <h2 class="display-4">Our Offer This Summer</h2>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <p class="lead">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="owl-carousel site-owl">


                    @foreach (var item in Model)
                    {

                        <div class="item">
                            <div class="media d-block mb-4 text-center site-media site-animate border-0">
                                <img src="@item.ImageUrl" style="height:240px" alt="Free Template by colorlib.com" class="img-fluid">
                                <div class="media-body p-md-5 p-4">
                                    <h5 class="text-primary">@item.ProductPrice CHF</h5>
                                    <h5 class="mt-0 h4">@item.ProductName</h5>
                                    <p class="mb-4">@item.ProductDescription</p>

                                    <p class="mb-0"><a href="#" class="btn btn-primary btn-sm">Order Now!</a></p>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>

        </div>
    </div>
</section>
